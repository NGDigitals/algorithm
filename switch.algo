ALGORITHM weather
VAR
    season: INTEGER;
    value: STRING;
BEGIN
    Read(season);

    SWITCH (value) DO
        case "One" : 
            Write("Winter"); 
            BREAK;
        case "2" : 
            Write("Autum"); 
            BREAK;
        case 3 : 
            Write("Fall"); 
            BREAK;
        case 4 : 
            Write("Summer"); 
            BREAK;
        default : 
            Write("Season not found") // optional use of BREAK;
    END_SWITCH
END